<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Cultura.Pages.Tablo">
	<ScrollViewer>
		<Grid Name="TabloGrid" ShowGridLines="True" Grid.Row="0" Grid.Column="0" RowDefinitions="50"
		  ColumnDefinitions="*, *, *, *, *, *, *, *">
			<Label Content="Название" Grid.Column="0" HorizontalAlignment="Center"/>
			<Label Content="Понедельник" Grid.Column="1" HorizontalAlignment="Center"/>
			<Label Content="Вторник" Grid.Column="2" HorizontalAlignment="Center"/>
			<Label Content="Среда" Grid.Column="3" HorizontalAlignment="Center"/>
			<Label Content="Четверг" Grid.Column="4" HorizontalAlignment="Center"/>
			<Label Content="Пятница" Grid.Column="5" HorizontalAlignment="Center"/>
			<Label Content="Суббота" Grid.Column="6" HorizontalAlignment="Center"/>
			<Label Content="Воскресенье" Grid.Column="7" HorizontalAlignment="Center"/>
			</Grid>
		</ScrollViewer>
</UserControl>
