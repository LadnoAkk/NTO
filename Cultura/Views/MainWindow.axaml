          </TabControl>
        </TabItem>
        <TabItem Header="Образовательное">
          <TabControl>

          </TabControl>
        </TabItem>
        <TabItem Header="Просветительское">
          <TabControl>
            <TabItem Header="Мероприятие">
              <ContentControl Name="EventCCP"/>
            </TabItem>
            <TabItem Header="Тип Мероприятия">
